    <div class="w-full max-w-lg">
      <h2 class="text-2xl font-bold text-blue-700 mb-6">Register</h2>
      <form>
        <div class="mb-4 flex space-x-4">
          <div class="w-1/2">
            <label class="block text-gray-700 mb-2" for="first_name">First Name</label>
            <input class="appearance-none border-2 border-gray-200 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-300" id="first_name" type="text" placeholder="First Name">
          </div>
          <div class="w-1/2">
            <label class="block text-gray-700 mb-2" for="last_name">Last Name</label>
            <input class="appearance-none border-2 border-gray-200 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-300" id="last_name" type="text" placeholder="Last Name">
          </div>
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 mb-2" for="email">Email</label>
          <input class="appearance-none border-2 border-gray-200 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-300" id="email" type="email" placeholder="Email">
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 mb-2" for="password">Password</label>
          <input class="appearance-none border-2 border-gray-200 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-300" id="password" type="password" placeholder="Password">
        </div>
        <div class="mb-6">
          <label class="block text-gray-700 mb-2" for="confirm_password">Confirm Password</label>
          <input class="appearance-none border-2 border-gray-200 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-300" id="confirm_password" type="password" placeholder="Confirm Password">
