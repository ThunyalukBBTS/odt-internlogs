<div class="relative flex min-h-screen bg-gray-100">
  <!-- Video Background -->
  <%= video_tag "bg.mp4", autoplay: true, loop: true, muted: true, playsinline: true, class: "absolute top-0 left-0 w-full h-full object-cover z-0" %>
  <!-- Content Area -->
  <div class="w-2/6 p-8 flex flex-col justify-between shadow-md z-10">
    <div>
      <div class="flex items-center mb-4">
        <%= image_tag "ODT-Logo.svg", class:"h-8 mr-2"%>
        <h1 class="text-lg font-bold">Getting started on Intern-Log</h1>
      </div>
      <div class="stepper">
        <div class="flex items-center mb-4">
          <div class="w-6 h-6 mr-2 rounded-full bg-blue-500 text-white flex items-center justify-center">1</div>
          <span class="font-semibold">Personal Information</span>
        </div>
        <div class="flex items-center">
          <div class="w-6 h-6 mr-2 rounded-full border-2 border-gray-300 flex items-center justify-center text-gray-400">2</div>
          <span class="text-gray-400">Banking Information</span>
        </div>
      </div>
    </div>
    <div class="mt-8">
      <img src="https://your-wave-url.com/wave.png" alt="Wave" class="h-20">
    </div>
  </div>
  <!-- Form Area -->
  <div class="w-4/6 bg-purple-50 p-12 flex justify-center items-start z-10">
    <div class="w-full max-w-lg">
      <h2 class="text-2xl font-bold text-blue-700 mb-6">Register</h2>
      <form>
        <!-- Form Fields here -->
      </form>
    </div>
  </div>
</div>
