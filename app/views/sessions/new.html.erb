<div class="min-[500px]:bg-[#FFFFFF] h-screen flex items-center justify-center">
  <div class="min-[500px]:grid min-[500px]:w-screen  grid-cols-6 w-screen h-screen gap-0 shadow-lg overflow-hidden ">
    
    <!-- Mobile Header with Logo Overlay -->
    <div class="relative w-screen min-[500px]:hidden">
      <!-- Heading Background -->
      <%= image_tag "heading_MB_login.png", alt: "Heading", class: "z-0 w-full" %>
      
      <!-- Logo Positioned on Top Left -->
      <div class="absolute top-3 left-3 z-10 p-2">
        <%= image_tag "odds_logo.png", alt: "Logo", class: "h-8 w-auto" %>
      </div>
    </div>

    <!-- Left Column: Login Form -->
    <div class="pt-5 min-[500px]:bg-[#FFFFFF] flex flex-col col-span-2 justify-start h-full px-6 ">
      
      <!-- Desktop Logo -->
      <div class="hidden min-[500px]:block text-center pt-5 pb-10">
        <%= image_tag "logo_odt_login.svg", alt: "Logo", class: "mx-auto h-16 w-auto" %>
      </div>

      <div class="text-center mt-0 min-[500px]:pb-4">
        <h3 class="text-3xl pt-0 min-[500px]:text-5xl text-[#000000] pb-4">Intern - Log</h3>
      </div>

      <div class="min-[500px]:text-center pb-6">
        <hr class="text-[#E2DEDE] mt-2">
      </div>

      <!-- Flash Messages -->
      <% if alert = flash[:alert] %>
        <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="alert">
          <%= alert %>
        </p>
      <% end %>

      <% if notice = flash[:notice] %>
        <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
          <%= notice %>
        </p>
      <% end %>

      <!-- Login Form -->
      <%= form_with url: session_url, class: "space-y-4 pb-6" do |form| %>
        <div class="pb-4">
          <%= form.label :email_address, "Email", class: "block text-[#000000] pb-2" %>
          <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username",
              placeholder: "Example@gmail.com", value: params[:email_address],
              class: "w-full px-4 py-2 border border-[#B0AEAE] rounded-lg focus:ring-[#7D58BF] placeholder-[#929292]" %>
        </div>

        <div class="pb-6">
          <%= form.label :password, "Password", class: "block text-[#000000] pb-2" %>
          <%= form.password_field :password, required: true, autocomplete: "current-password",
              placeholder: "Enter your password", maxlength: 72,
              class: "w-full px-4 py-2 border border-[#B0AEAE] rounded-lg focus:ring-[#7D58BF] placeholder-[#929292]" %>
        </div>

        <!-- Submit Button -->
        <div class="pb-4">
          <%= form.submit "Login", class: "w-full bg-[#7D58BF] text-[#FFFFFF] py-3 rounded-lg hover:bg-[#5c3e90] font-medium cursor-pointer" %>
        </div>
      <% end %>

      <hr class="text-[#E2DEDE] pb-2">
      <p class="text-sm text-center min-[500px]:mt-4 text-[#929292]">
        Donâ€™t have an account yet?
        <%= link_to "Register", "/register", class: "text-[#0056A9] hover:underline" %>
      </p>
    </div>

    <!-- Right Column: Image Slider -->
    <div class="hidden min-[500px]:flex col-span-4 items-center justify-center">
      <div data-controller="slideshow"
          data-slideshow-images="<%= (1..8).map { |i| asset_path("login_slideshow/login_slideshow#{i}.png") }.to_json %>"
          class="relative overflow-hidden shadow-lg">
        <%= image_tag "login_slideshow/login_slideshow1.png",
            data: { slideshow_target: "image" },
            class: "w-full h-full object-cover transition-opacity duration-1000 ease-in-out" %>
      </div>
    </div>

  </div>
</div>
