<div data-newdailymodal-target="confirm_modal" class="z-30 fixed bg-black/40 inset-0 items-center justify-center hidden">
  <div class="bg-white rounded-xl w-[90%] max-w-4xl text-center">
    <div class="relative flex rounded-lg">
      <!-- Side Image -->
      <div class="hidden w-2/6 md:flex flex-col justify-between z-10 bg-[#f7f4ff]  rounded-l-xl">
        <div class="px-6 py-10">
          <div class="flex items-center mb-4">
            <%= image_tag "ODT-Logo.svg", class:"h-8 mr-2"%>
          </div>
          <h1 class="text-sm mb-4 text-gray-500 ">Software Development should be joyful</h1>
          <div class="stepper">
            <div class="flex items-center mb-1">
              <div class="w-6 h-6 mr-2  rounded-full bg-[#0056a9]/70 text-white flex items-center justify-center">
                <%= image_tag 'correct.svg', width: 20, height: 20 %>
              </div>
              <span class="font-semibold text-base text-gray-400">Daily Information</span>
            </div>
            <div class="h-8 ml-[11px] w-[2px] mb-1 bg-[#0056a9]/70"></div>
            <div class="flex items-center">
              <div class="w-6 h-6 mr-2  rounded-full bg-[#0056a9] text-white flex items-center justify-center">2</div>
              <span class=" text-base">Confirming</span>
            </div>
          </div>
        </div>
        <div class="bottom-0 mt-8 rounded-bl-xl">
          <%= image_tag "addwave.svg", class:"w-full rounded-bl-xl"%>
        </div>
      </div>
      <!-- Form Area -->
      <div class="w-full md:w-4/6 text-base pt-3 px-6 md:pt-10 md:px-14 text-left">
        <h1 class="text-xl font-bold mt-[8px] mb-4 text-[#0056a9]">Confirm Daily Task</h1>
        <div class="bg-white rounded-lg w-full text-base">
                  <div class="mb-2 flex flex-col gap-2">
                    <div class="flex flex-row gap-3 items-center align-middle">
                      <label class="">Date</label>
                          </div>
                          <p data-newdailymodal-target="output_date" class="border border-neutral-400 rounded-lg px-4  py-2  bg-gray-200"></p>       
            </div>
            <div class="mb-2 flex flex-col gap-2" data-controller="worktime">
              <label class="block">Worktime</label>
              <div class="flex flex-row items-center align-middle">
                <p data-newdailymodal-target="output_hour" class="border flex w-1/2 rounded-l-lg px-4  py-[7px]  border-neutral-400 bg-gray-200 "></p>
                <p data-newdailymodal-target="output_min" class="border flex w-1/2 rounded-r-lg px-4  py-[7px]  border-neutral-400 bg-gray-200"></p>
              </div>
            </div>
            <div class="mb-4 flex flex-col gap-2">
              <div class="flex flex-row justify-start ">
                <label class="">Detail</label>
              </div>
              <div class="border rounded-lg px-4 py-[7px] min-h-28 border-neutral-400 sm:min-h-36 text-left w-full break-words bg-gray-200">
                <p data-newdailymodal-target="output_detail" ></p>
              </div>
            </div>
            <div class="flex justify-end space-x-4 mt-3 mb-7">
              <button data-action="click->newdailymodal#back_to_edit"
                onclick="event.preventDefault();"
                class="bg-white text-gray-400 border-gray-400 border-1 w-32 px-4 py-2 rounded-lg cursor-pointer">Back</button>
                <button data-action="click->newdailymodal#submit"
                  onclick="event.preventDefault();"
                  class="bg-[#7D58BF] text-white w-32 px-4 py-2 rounded-lg cursor-pointer">Save</button>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
