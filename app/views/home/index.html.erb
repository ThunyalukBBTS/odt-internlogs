<link rel="stylesheet"
  href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=edit_square" />
<%= render "layouts/navbar" %>
<div class='mt-32'>
  <% if @user.present? %>
    <p class="text-center mt-4 text-xl text-[#DF633B] "> Username : <%= @user.username %>
    </p>
  <% else %>
    <p class="text-center mt-4 text-red-500 font-bold text-xl">User not found</p>
  <% end %>
  <div class="flex justify-center mt-6  ">
    <table class="w-[80%] bg-white shadow-lg rounded-lg overflow-hidden   ">
      <thead>
        <tr class="bg-[#DF633B] text-white text-left rounded-tr-lg h-13">
          <th class="px-4 py-2 w-2/6 text-xl">Date</th>
          <th class="px-4 py-2 w-2/6 text-xl">Worktime</th>
          <th class="px-4 py-2 w-3/6 text-xl">Details</th>
        </tr>
      </thead>
      <tbody class="space-y-4">
        <% @tasks.each do |task| %>
          <tr class="bg-gray-100  border-t-6 border-white ">
            <td class="px-4 py-2 ">
              <%= task.date.strftime("%d/%m/%Y") %>
            </td>
            <td class="px-4 py-2 ">
              <%= task.hours %> hours <%= task.mins> 0 ? "#{task.mins} minutes" : "" %>
            </td>
            <td class="px-4 py-2 flex justify-between items-center">
              <span>
                <%= task.detail %>
              </span>
              <button class="bg-orange-200 hover:bg-orange-300 text-orange-700 px-2 py-1 rounded edit-task-btn"
        data-id="<%= task.id %>"
        data-date="<%= task.date %>"
        data-hours="<%= task.hours %>"
        data-mins="<%= task.mins %>"
        data-detail="<%= task.detail %>">
                <span class="material-symbols-outlined">edit_square</span>
              </button>
            </td>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<!-- Floating Button -->
<div class="fixed bottom-4 right-4">
  <%= link_to "daily_task" , class: "inline-block" do %>
    <button class="bg-orange-500 hover:bg-orange-600 text-white text-2xl p-4 rounded-full shadow-lg">
      â•
    </button>
  <% end %>
</div>
</div>
</div>
<%= render "edit" %>